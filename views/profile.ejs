<%- include("parts/header")  %> 
<%- include("parts/navbar")  %> 

<div class="container">
    <div class="row">
        <div class="col col-12 col-md-4">
            <img src="/<%= friendImage %> " alt="">
        </div>
        <div class="col col-12 col-md-6">
            <h3><%= friendName %> </h3>
            <% if(!isOwner) {%> 
                <form method="POST" id= "friends-form">
                    <input  id= "myId" type="hidden" name= "myId" value= "<%=myId%>">
                    <input  id= "myName" type="hidden" name= "myName" value= "<%=myName%>">
                    <input  id= "myImage" type="hidden" name= "myImage" value= "<%=myImage%>">

                    <input  id= "friendId" type="hidden" name= "friendId" value= "<%=friendId%>">
                    <input  id= "friendName" type="hidden" name= "friendName" value= "<%=friendName%>">
                    <input  id= "friendImage" type="hidden" name= "friendImage" value= "<%=friendImage%>">

                    <% if(isFriends){ %>
                        <input type="submit" value= "Delete Friend" class="btn btn-danger" formaction= "/friend/delete">
                    <% } else if(isRequestSent){%>
                        <input type="submit" value= "Cancel Request" class="btn btn-danger" formaction= "/friend/cancel">
                    <% } else if(isRequestRecieved){%>
                        <input type="submit" value= "Accept Request" class="btn btn-danger" formaction= "/friend/accept">
                        <input type="submit" value= "Reject Request" class="btn btn-danger" formaction= "/friend/reject">
                    <% } else {%>
                        <input id= "addBtn" type="submit" value= "Add Friend" class="btn btn-danger">
                    <%  } %>     
                </div>
            <% } %> 
        </div>
    </div>
</div>
<%-include("parts/scripts")%> 
<%-include("parts/footer") %> 


<% if (!isOwner && !isFriends && !isRequestSent && !isRequestRecieved) {%> 
    <script src="/sockets/friend.js"></script>
<% } %> 